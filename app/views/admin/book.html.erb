 <div id="wrapper">
    <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
                        <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Books <small>Books Management</small>
                        </h1>
                        <ol class="breadcrumb">
                            <li class="active">
                                <i class="fa fa-dashboard"></i> Dashboard / <i class="fa fa-book"></i> Books
                            </li>
                        </ol>
                    </div>
                </div>
            <div id="content" class="span10">
            <div class="row-fluid sortable">        
                <div class="box span12">
                    <div class="box-header" data-original-title>
                        <h2><i class="halflings-icon white user"></i><span class="break"></span>All books</h2>
                        <div class="box-icon">
                            <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                            <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                            <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <table class="table table-striped table-bordered bootstrap-datatable datatable">
                          <thead>
                              <tr>
                              	  <th>Cover</th>
                                  <th>Title</th>
                                  <th>Email</th>
                                  <th>Registered date</th>
                                  <th>Role</th>
                                  <th>Actions</th>
                              </tr>
                          </thead>   
                          <tbody>
                            <%Book.all.each do |book|%>
                            <tr>
                            	<td><%=image_tag book.image_file_name, :class =>"image-small"%></td>
                                <td><%=book.title%></td>
                                <td class="center"><%=book.author%></td>
                                <td class="center"><%=book.created_at.strftime("%d/%m/%Y") %></td>
                                <td class="center">
                                    <%= link_to user_path(book) do%>
                                      <span class="btn btn-success">
                                       <i class="fa fa-info"></i></i>
                                    </span>
                                    <% end %> 
                                    <%= link_to edit_user_path(book) do%>
                                      <span class="btn btn-info">
                                       <i class="fa fa-pencil-square-o"></i>
                                    </span>
                                    <% end %> 
                                    <%= link_to book, method: :delete, data: { confirm: 'Are you sure?' } do%>
                                      <span class="btn btn-danger">
                                       <i class="fa fa-trash"></i>
                                    </span>
                                    <% end %>
                                    
                                </td>
                            </tr>
                            <% end %>
                          </tbody>
                      </table>            
                    </div>
                </div><!--/span-->
            </div><!--/row-->
            </div>
            </div>
                </div>
            </div>
        </div>
</div>

       <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>